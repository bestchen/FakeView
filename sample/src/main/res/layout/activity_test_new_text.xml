<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <EditText
        android:id="@+id/edit"
        android:layout_width="match_parent"
        android:layout_height="50dp" />

    <Button
        android:id="@+id/click"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="click"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <Button
            android:id="@+id/switcher"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="color"/>
        <EditText
            android:id="@+id/data"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" />
        <Button
            android:id="@+id/done"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="done"/>
    </LinearLayout>

    <xfy.fakeview.library.text.NewTextView
        android:id="@+id/new_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:maxLines="2"
        android:textColor="#fff"
        android:lineSpacingExtra="10px"
        app:fntv_drawable_scale="1"
        app:fntv_text_compiler="click_span"
        android:padding="10dp"
        android:background="#af00"/>

    <xfy.fakeview.library.text.NewTextView
        android:id="@+id/new_text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:maxLines="3"
        android:textColor="#f00"
        android:lineSpacingExtra="20px"
        android:text="test"
        app:fntv_drawable_size="30dp"
        app:fntv_text_compiler="com.xfy.fakeview.special.TestCompiler"
        android:padding="20dp"
        android:background="#a0f0"/>

    <com.xfy.fakeview.TraceTextView
        android:id="@+id/normal_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="#a0f0" />

    <com.xfy.fakeview.LayoutTextView
        android:id="@+id/layout_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="#a00f" />
</LinearLayout>